<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:DataType="ContentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="pitscout2026.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="Team #:"
                    />
                <Entry
                    x:Name="Team_Num"
                   Text=""
                    WidthRequest="75"
                    MaxLength="5"
                    Keyboard="Numeric"
                    TextChanged="Team_Num_TextChanged"
                    />
                <Button
                    x:Name="Load_But"
                    Text="Load"
                    Clicked="Load_But_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Save_But"
                    Text="Save"
                    Clicked="Save_But_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Init_Data"
                    Text="Init Database"
                    Clicked="Init_Data_Clicked"
                    BackgroundColor="Gray"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="What Is Your Drive Train?"   
                    />
                <Button
                    x:Name="Drive_Train_Swerve"
                   Text="Swerve"
                    Clicked="Drive_Train_Swerve_Clicked"
                    BackgroundColor="Gray"
                   />
                <Button
                    x:Name="Drive_Train_Tank"
                   Text="Tank"
                    Clicked="Drive_Train_Tank_Clicked"
                    BackgroundColor="Gray"
                   />
                <Label
                    x:Name="Drive_Train_Other"
                   Text="Other:"
                   />
                <Entry
                    x:Name="Drive_Train_Write"
                    Text=""
                    WidthRequest="150"
                    MaxLength="100"
                    TextChanged="Drive_Train_Write_TextChanged"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                   Text="Preferred Placement on the Field?"   
                   />
                <Button
                    x:Name="Preferred_Placement_Left"
                   Text="Left"
                    Clicked="Preferred_Placement_Left_Clicked"
                    BackgroundColor="Gray"
                   />
                <Button
                    x:Name="Preferred_Placement_Middle"
                   Text="Middle"
                    Clicked="Preferred_Placement_Middle_Clicked"
                    BackgroundColor="Gray"
                   />
                <Button
                    x:Name="Preferred_Placement_Right"
                   Text="Right"
                    Clicked="Preferred_Placement_Right_Clicked"
                    BackgroundColor="Gray"
                   />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="Can You Climb in Auto?"   
                    />
                <Button
                    x:Name="Auto_Climb_Yes"
                    Text="Yes"
                    Clicked="Auto_Climb_Yes_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Auto_Climb_No"
                    Text="No"
                    Clicked="Auto_Climb_No_Clicked"
                    BackgroundColor="Gray"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="Can You Shoot in Auto?"   
                    />
                <Button
                    x:Name="Auto_Shoot_Yes"
                    Text="Yes"
                    Clicked="Auto_Shoot_Yes_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Auto_Shoot_No"
                    Text="No"
                    Clicked="Auto_Shoot_No_Clicked"
                    BackgroundColor="Gray"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="What's Your Best Auto?"   
                    />
                <Entry
                    x:Name="Best_Auto"
                    Text=""
                    WidthRequest="250"
                    MaxLength="100"
                    TextChanged="Best_Auto_TextChanged"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="Max Fuel Capacity?"   
                    />
                <Entry
                     x:Name="Max_Fuel"
                    Text=""
                    WidthRequest="50"
                    MaxLength="3"
                    Keyboard="Numeric"
                    TextChanged="Max_Fuel_TextChanged"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="Can You Climb?"   
                    />
                <Button
                    x:Name="Can_Climb_Yes"
                    Text="Yes"
                    Clicked="Can_Climb_Yes_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Can_Climb_No"
                    Text="No"
                    Clicked="Can_Climb_No_Clicked"
                    BackgroundColor="Gray"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="What Level?"   
                    />
                <Button
                    x:Name="Climb_Level_1"
                    Text="1"
                    Clicked="Climb_Level_1_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Climb_Level_2"
                    Text="2"
                    Clicked="Climb_Level_2_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Climb_Level_3"
                    Text="3"
                    Clicked="Climb_Level_3_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Climb_Level_None"
                    Text="None"
                    Clicked="Climb_Level_None_Clicked"
                    BackgroundColor="Gray"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="Middle or Side Climb?"   
                    />
                <Button
                    x:Name="Climb_Loc_Middle"
                    Text="Middle"
                    Clicked="Climb_Loc_Middle_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Climb_Loc_Side"
                    Text="Side"
                    Clicked="Climb_Loc_Side_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Climb_Loc_Both"
                    Text="Both"
                    Clicked="Climb_Loc_Both_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Climb_Loc_None"
                    Text="None"
                    Clicked="Climb_Loc_None_Clicked"
                    BackgroundColor="Gray"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="What Are Your Strengths?"   
                    />
                <Entry
                    Text=""
                    WidthRequest="250"
                    MaxLength="100"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="What's Your Fuel/Points Per Second?"   

                    />
                <Entry
                    x:Name="Fps"
                    Text=""
                    WidthRequest="50"
                    MaxLength="2"
                    Keyboard="Numeric"
                    TextChanged="Fps_TextChanged"
                    />
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label
                    Text="Preferred Travel Route?"   
                    />
                <Button
                    x:Name="Travel_Route_Over"
                    Text="Over"
                    Clicked="Travel_Route_Over_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Travel_Route_Under"
                    Text="Under"
                    Clicked="Travel_Route_Under_Clicked"
                    BackgroundColor="Gray"
                    />
                <Button
                    x:Name="Travel_Route_Both"
                    Text="Both"
                    Clicked="Travel_Route_Both_Clicked"
                    BackgroundColor="Gray"
                    />
            </HorizontalStackLayout>
            <Grid
                HorizontalOptions="Fill" >
                <Editor
                    x:Name="Comments"
                    Grid.Row="0"
                    Placeholder="Put in Comments..."
                    PlaceholderColor="LightGray"
                    HorizontalOptions="Fill"
                    MaxLength="250"
                    Margin="10,5,10,10"
                    Text=""
                    IsEnabled="True"
                    FontSize="{OnPlatform WinUI=Small, Android=Medium}"
                    TextChanged="Comments_TextChanged"
                    />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
